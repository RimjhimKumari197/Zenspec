    <script>
  let isEditing = false;
  let originalAction = `/phones/<%= phone._id %>/review`;
  let reviewForm = document.getElementById('unified-review-form');
  let reviewInput = document.getElementById('main-review-input');
  let reviewButton = document.getElementById('review-submit-btn');

  function startEditReview(reviewId, phoneId) {
    const commentText = document.getElementById(`comment-text-${reviewId}`).innerText;

    // Fill the input with existing comment
    reviewInput.value = commentText;
    
    // Change form action to update route
    reviewForm.action = `/phones/${phoneId}/review/${reviewId}/edit`;

    // Change button text
    reviewButton.innerText = "Update";
    
    // Set editing state
    isEditing = true;
  }

  // Optional: reset form after submit (for both comment + update)
  reviewForm.addEventListener("submit", function () {
    setTimeout(() => {
      reviewForm.action = originalAction;
      reviewInput.value = "";
      reviewButton.innerText = "Comment";
      isEditing = false;
    }, 100); // Let submit happen, then reset
  });
  
</script>

   
       
